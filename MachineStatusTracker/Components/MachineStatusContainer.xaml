<UserControl x:Class="MachineStatusTracker.Components.MachineStatusContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MachineStatusTracker.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Border BorderBrush="LightGray" CornerRadius="5" BorderThickness="2" >
            <WrapPanel Background="WhiteSmoke" Orientation="Horizontal" >
                <local:MachineStatusView></local:MachineStatusView>
                <local:MachineStatusView></local:MachineStatusView>
                <local:MachineStatusView></local:MachineStatusView>
                <local:MachineStatusView></local:MachineStatusView>
            </WrapPanel>
        </Border>

    </Grid>
</UserControl>
